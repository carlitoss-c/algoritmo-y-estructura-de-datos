Algoritmo ContarParesImpares
	Definir n, pares, impares Como Entero
	pares <- 0
	impares <- 0
	Escribir 'Ingrese un número (0 para terminar):'
	Leer n
	Mientras n<>0 Hacer
		Si n MOD 2=0 Entonces
			pares <- pares+1
		SiNo
			impares <- impares+1
		FinSi
		Escribir 'Ingrese otro número (0 para terminar):'
		Leer n
	FinMientras
	Escribir 'Cantidad de pares: ', pares
	Escribir 'Cantidad de impares: ', impares
FinAlgoritmo
