Algoritmo ContarPosNegCero
	Definir i, n, positivos, negativos, ceros Como Entero
	
	positivos <- 0
	negativos <- 0
	ceros <- 0
	
	Para i <- 1 Hasta 15 Hacer
		// 2. Entrada de datos
		Escribir "Ingrese el nÃºmero ", i, ":"
		Leer n
		
		Si n > 0 Entonces
			positivos <- positivos + 1
		Sino
			Si n < 0 Entonces
				negativos <- negativos + 1
			Sino
				ceros <- ceros + 1
			FinSi
		FinSi
	FinPara
	
	Escribir "Cantidad de positivos: ", positivos
	Escribir "Cantidad de negativos: ", negativos
	Escribir "Cantidad de ceros: ", ceros
FinAlgoritmo
